// THIS FILE IS ONLY A BACKUP
// Check the real rules online at https://radio4000.firebaseio.com/# or whatever the current DB is

{
  "rules": {

    // default rules are false if not specified
    // setting these to true would make ALL CHILD PATHS readable/writable
    ".read": false,

    //".write": false,
    ".write": "auth != null", // temporary write access everywhere

    "channels": {
      ".read": true,
      //".write": "auth != null",
      "$channel": {
        ".write": "data.child('user').val() == auth.uid"
      }
    },

    "tracks": {
      ".read": true
    },

    "users": {
      ".read": true,
      "$user": {
        // you need to be logged in and you can't modify existing data
        ".write": "auth != null && data.exists()"
      }
    },

    "userPrivates": {
      "$userPrivate": {
        // you need to be logged in and you can't modify existing data
        ".write": "auth != null && data.exists()"
      }
    }
  }
}
