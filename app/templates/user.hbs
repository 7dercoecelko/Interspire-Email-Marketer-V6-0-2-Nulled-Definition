<p class="Manchet">Welcome, here's a complete overview of what you can do.</p>

<section class="Dashboard">

	<div class="Section">
		<div class="Section-inner">
			{{#if playlists}}
				<h2>Your radio</h2>
				<p class="is-inactiveText">Curate music, enjoy your own taste or share it with friends and beyond.</p>
				<ul class="Grid">
					{{#each playlists}}
						<li>{{#link-to "playlist" this}}{{title}}{{/link-to}}</li>
					{{/each}}
				</ul>
			{{else}}
				<div class="CreatePlaylist">
					<p>{{#link-to "playlists.new"}}<button class="Btn">Get your own playlist</button>{{/link-to}}</p>
				</div>
			{{/if}}
		</div>
	</div>

	<section class="Section">
		<h2>Your favorites</h2>
		{{#if favoritePlaylists}}
			<p class="is-inactiveText">Quick access to the best channels</p>
			<ul class="Grid">
				{{#each favoritePlaylists}}
					<li>{{#link-to "playlist" this}}{{title}}{{/link-to}}</li>
				{{/each}}
			</ul>
		{{else}}
			<p class="is-inactiveText">You haven't addded any favorites yet.</p>
		{{/if}}
	</section>

	<section class="Section">
		{{#link-to 'playlists' class="Box"}}
			<h2>Explore more channels</h2>
			<p><span class="is-highlighted">browse</span> channels</p>
		{{/link-to}}
	</section>
</section>
