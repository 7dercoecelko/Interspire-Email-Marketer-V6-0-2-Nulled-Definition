<div class="Container Container--full">
	<div class="Grid">
		<article class="Grid-cell Grid-cell--triple">
			{{channel-header channel=model}}
		</article>
		{{#if model.canEdit}}
			<div class="Grid-cell Grid-cell--triple">
				<form class="Form">
					{{track-add-inline addTrackUrl=addTrackUrl
						onSubmit=(action "addTrack")}}

				</form>

				{{#if isEditing}}
					{{#modal-dialog close="closeModals"}}
						{{track-edit
								track=trackToEdit
								onSubmit=(action "updateTrack")
								onCancel=(action "closeModals")
								onDeleteTrack=(action "deleteTrack")}}
					{{/modal-dialog}}
				{{/if}}
			</div>
		{{/if}}
	</div>
</div>

{{outlet}}
