{{!-- if not logged in display in intro message to check out a guide --}}

<div class="NavigationTab">
	{{#link-to 'channels.index' title="Discover channels" class="NavigationTab-item"}}Discover{{/link-to}}
	{{#link-to 'channels.popular' title="Discover channels" class="NavigationTab-item"}}Popular{{/link-to}}
	{{#link-to 'channels.all' title="Discover channels" class="NavigationTab-item"}}All{{/link-to}}
</div>

{{outlet}}

<section class="Section">
	{{#unless session.authed}}
		{{!-- {{#link-to 'introduction' class="Box"}}
			<h2 class="Title">Welcome to Radio4000!</h2>
			<p>→ get introduced</p>
		{{/link-to}} --}}
		<p class="IntroMessage Container">
			Welcome to <strong>Radio4000</strong>! {{#link-to 'introduction'}}Get introduced{{/link-to}}.
		</p>
	{{/unless}}

	{{#unless session.userChannel}}
		{{!-- {{#link-to 'new' class="Box" title="Register or sign in to create your channel"}}
			<h2 class="Title">Create a radio</h2>
			<p>→ register or sign in</p>
		{{/link-to}} --}}
		<p class="IntroMessage Container">
			It seems you don't have a radio yet. {{#link-to 'new'}}Create your radio{{/link-to}}.
		</p>
	{{/unless}}
</section>
