{{#app-root}}
	<div class="Bar Bar--top">
		{{#nav-bar radioDevice=emberYoutube
			userChannel=session.currentUser.channels.firstObject}}
			{{site-logo-button}}
		{{/nav-bar}}
	</div>

	{{#if flashMessages.queue}}
		<aside class="FlashMessages">
			{{#each flashMessages.queue as |flash|}}
				{{flash-message flash=flash}}
			{{/each}}
		</aside>
	{{/if}}

	{{x-aside class="Aside--left"
		isAuthenticated=session.isAuthenticated
		userChannel=userChannel}}

	{{#if session.isAuthenticated}}
		{{href-to 'Add track' 'channel.add' userChannel class="Btn Btn--primary AddTrackButton" title="Add a new track to your radio"}}
	{{/if}}

	<main class="SiteMain">
		{{#if-ios}}
			<div class="Note Note--full">
				<p>We're sorry but because your iOS device doesn't support autoplay, Radio4000 can't work properly.</p>
			</div>
		{{/if-ios}}

		{{outlet}}
	</main>

	<div class="Bar Bar--bottom">
		<div class="Player">
			{{ember-youtube ytid=player.model.ytid
				delegate=this
				delegate-as="emberYoutube"
				autoplay="true"
				playing="ytPlaying"
				paused="ytPaused"
				ended="ytEnded"
				error="ytError"
				showProgress="true"}}
		</div>
		{{x-playback radioDevice=emberYoutube}}
	</div>
{{/app-root}}
