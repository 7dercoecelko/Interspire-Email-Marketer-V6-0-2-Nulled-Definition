{{#leaflet-map
		 maxBounds=maxBounds
		 lat=lat
		 lng=lng
		 zoom=zoom
		 minZoom=minZoom
		 attributionControl=false
		 onLoad=(action "initMap")
		 onMoveend=(action "updateCenter")
}}
	{{tile-layer url="https://{s}.tile.opentopomap.org/{z}/{x}/{y}.png"}}

	{{#each items as |item|}}
		{{#if item.isFavorite}}
			{{#marker-layer
					 icon=iconFavorite
					 location=item.coordinates}}
				{{#popup-layer}}
					{{yield item}}
				{{/popup-layer}}
			{{/marker-layer}}
		{{else}}
			{{#marker-layer
					 icon=iconDefault
					 location=item.coordinates}}
				{{#popup-layer}}
					{{yield item}}
				{{/popup-layer}}
			{{/marker-layer}}
		{{/if}}
	{{/each}}

{{/leaflet-map}}
