{{#link-to 'track' track class="Track-link"}}
	<h3 class="Track-title">
		{{track.title}}
	</h3>
	<p class="Track-body">{{track.body}}</p>
{{/link-to}}

<p class="Track-controls Muted" title="Edit the track" {{action 'edit'}}>

	{{!-- using static icon to avoid an extra component for performance
	{{x-icon i="pencil"}} --}}
	<svg class="icon-pencil">
		<use xlink:href="images/icons/sprite.svg#icon-pencil"></use>
	</svg>
</p>
