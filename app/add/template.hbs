<div class="Sections">
	<div class="Section">
		<div class="Container">
			<h2>Add a new track to <em>{{model.title}}</em></h2>
			{{track-add
				newUrl=url
				onSubmit=(action "saveTrack")
				onCancel=(action "goBack")}}
			<br>
			<p>
				Do you want to see {{#link-to "channel" model.slug}}your channel <em>{{model.title}}</em>{{/link-to}}? It currently has {{model.totalTracks}} tracks.
			</p>
			<p {{action "toggleModal"}}>
				&rarr;{{link-to "Get the bookmarklet" "bookmarklet" class="Btn Btn--text"}}
			</p>
		</div>
	</div>
</div>

{{outlet}}
