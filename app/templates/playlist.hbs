<article class="Playlist Constrained">

	<header class="Playlist-header Section">
		<h1 class="Playlist-title">{{title}}</h1>
		<div class="Playlist-desc">
			{{body}}
		</div>

		{{#if canEdit}}
			{{#if isEditing}}
				<form class="Form" {{action "save" on="submit"}}>
					{{input value=title placeholder="Title" autofocus='autofocus'}}
					{{!-- {{input value=slug placeholder="Slug"}} --}}
					{{!-- {{textarea value=image placeholder="Image URL"}} --}}
					{{textarea value=body placeholder="Description"}}
					<button class="Btn Btn--primary" type="submit">Save</button>
					<button class="Btn Btn--text" {{action 'cancel'}}>Cancel</button>
					<button class="Btn Btn--text Btn--danger" {{action 'tryDelete'}}>Delete</button>
				</form>
			{{else}}
				<p><button class="Btn Btn--edit" {{action 'edit'}}>Edit</button></p>
			{{/if}}
		{{/if}}

		{{!-- <p>isFavorite: {{isFavorite}}</p>
		<p>model id: {{id}}</p>
		{{#each favoritePlaylist in userFavs}}
			<p>favoritePlaylist id: {{favoritePlaylist.id}}</p>
		{{/each}} --}}

		<p>{{#if auth.authed}}
			{{#if isFavorite}}
				<button class="Btn" {{action 'removeFavorite'}}>Remove from favorites</button>
			{{else}}
				<button class="Btn" {{action 'favorite'}}>Add to favorites</button>
			{{/if}}
		</p>{{/if}}
	</header>

	<div class="Playlist-body">
		{{render 'tracks' tracks}}
		{{outlet}}
	</div>
</article>
