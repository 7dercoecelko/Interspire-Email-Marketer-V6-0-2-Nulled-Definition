<div class="Sections">
	<section class="Section">
		<div class="Manchet">
			<h1>Your listening <small>history</small></h1>
			<p class="Muted">Only you can see your history.</p>
		</div>

		{{#if model.userSettings.playedChannels}}
			<div class="Container Container--full">
				{{#each-grid items=model.userSettings.playedChannels as |item|}}
					{{channel-card channel=item}}
				{{/each-grid}}
				{{#btn-group}}
					<button class="Btn" {{action 'clearChannelHistory'}}>Clear history</button>
				{{/btn-group}}
			</div>
		{{else}}
			<div class="Container">
				{{#if session.isAuthenticated}}
					<p>You haven't played any radios yet.</p>
				{{else}}
					<p>When you register, we'll save your listening history here so you can always come back to your last played radios and tracks.</p>
					<p>{{href-to 'Register or log in' 'login'}}.</p>
				{{/if}}
			</div>
		{{/if}}
	</section>
</div>
