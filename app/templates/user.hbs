<section class="Section">
	<div class="Container">
		<h2>Your channel</h2>
	</div>
	{{#if session.userChannel}}
	<div class="Container Container--noPadding">
		<ul class="List">
			<li>{{#link-to "channel" session.userChannel title="Your channel"}}
				<h3>{{session.userChannel.title}} →</h3>
			{{/link-to}}</li>
		</ul>
	</div>
	{{else}}
	<div class="Container">
		<p class="Muted">What are you waiting for?</p>
		{{#link-to "new" class="BoxIcon BoxIcon--add" title="Create your channel"}}
			Create your channel →
		{{/link-to}}
	</div>
	{{/if}}
</section>

<section class="Section">
	<div class="Container">
		<h2>Your favorite channels</h2>
	</div>
	{{#if session.user.favoriteChannels}}
	<div class="Container Container--noPadding">
		<ul class="List">
			{{#each channel in session.user.favoriteChannels}}
				<li>
					{{#link-to "channel" channel title="Your favorite channel"}}
						<h3>{{channel.title}}</h3>
					{{/link-to}}
				</li>
			{{/each}}
		</ul>
	</div>
	{{else}}
	<div class="Container">
		<p class="Muted">You haven't got any favorites yet.</p>
		{{#link-to "channels" class="BoxIcon BoxIcon--explore" title="Discover channels"}}
			Discover channels
		{{/link-to}}
	</div>
	{{/if}}
</section>
