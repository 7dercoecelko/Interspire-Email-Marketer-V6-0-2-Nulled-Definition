{{#link-to 'track' track class="Track-link"}}
	<h3 class="Track-title">
		{{#if track.title}}
			{{track.title}}
		{{else}}
			Untitled
		{{/if}}
	</h3>
	{{#if track.body}}
	<p class="Track-description">{{track.body}}</p>
	{{/if}}
{{/link-to}}

{{#if playlist.canEdit}}
	{{#if isEditing}}
		<form class="Form EditTrack">
			<div class="Form-group">
			<label>URL
				{{input type="url" placeholder="YouTube or Soundcloud URL" value=track.url}}</label>
			</div>
			<div class="Form-group">
				<label>Title
					{{input value=track.title placeholder="Title"}}
				</label>
			</div>
			<div class="Form-group">
				<label>Description
				{{textarea value=track.body placeholder="Description"}}</label>
			</div>
			<div class="Form-group">
				<button class="Btn Btn--primary" {{action "save" track}}>Save track</button>
				<button class="Btn Btn--text" {{action 'cancel'}}>Cancel</button>
				<button class="Btn Btn--text Btn--danger u-alignRight" {{action 'remove' track}}>Delete</button>
				<div class="Track-controls">
					<button class="Btn Btn--text" {{action 'cancel'}}>Cancel editing</button>
				</div>
			</div>
		</form>
	{{else}}
		<div class="Track-controls">
			<button {{action 'edit'}}>Edit</button>
		</div>
	{{/if}}
{{/if}}

{{yield}}
