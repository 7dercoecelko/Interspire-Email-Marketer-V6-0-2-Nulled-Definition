<div class="Bar Bar--top">
	{{site-logo-button}}
</div>

{{#if flashMessages.queue}}
	<aside class="FlashMessages">
		{{#each flashMessages.queue as |flash|}}
			{{flash-message flash=flash}}
		{{/each}}
	</aside>
{{/if}}

{{x-aside class="Aside--left"
	isAuthenticated=session.isAuthenticated
	userChannel=session.currentUser.channels.firstObject}}

<main class="SiteMain">
	{{yield}}
</main>

<div class="Aside Aside--right">
	{{x-playback}}
</div>

{{#link-to 'channels.all' class="PlayButton Btn Btn--round" title="Find a radio channel to play!"}}
	{{!-- {{x-icon i='play'}} --}}
	<img src="assets/images/icons/sound.gif" alt="Find a radio channel to play!">
{{/link-to}}
