<form class="Form ProviderAccount" {{action "link" email password on="submit"}}>
	<div class="ProviderAccount-body">
		<p class="ProviderAccount-id">{{name}}</p>
		{{#if showInputs}}
			<div class="ProviderAccount-inputs">
				<div class="Form-group">
					{{input type="email" value=email placeholder="Email" required="required" autocomplete="nope"}}
				</div>
				<div class="Form-group">
					{{input type="password" value=password placeholder="Create a password" required="required" autocomplete="new-password"}}
				</div>
			</div>
		{{/if}}
	</div>
	<button type="submit" class="Btn">Add</button>
</form>

{{yield}}
