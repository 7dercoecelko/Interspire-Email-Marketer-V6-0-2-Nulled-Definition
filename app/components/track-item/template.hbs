{{#link-to 'track' track class="Track-link"}}
	{{!-- {{x-icon i="play"}} --}}
	<h3 class="Track-title">
		{{track.title}}
	</h3>
	{{#if track.body}}<p class="Track-description">{{track.body}}</p>{{/if}}
{{/link-to}}

{{!-- {{#if canEdit}} --}}
<p class="Track-controls" title="Edit the track">
	{{#link-to 'channel.index.edit-track' track}}
		{{x-icon i="pencil"}}
	{{/link-to}}
</p>
{{!-- {{/if}} --}}

