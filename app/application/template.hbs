{{#app-root}}
	<div class="Bar Bar--top">
		{{#nav-bar radioDevice=emberYoutube
			userChannel=session.currentUser.channels.firstObject}}
			{{site-logo-button}}
		{{/nav-bar}}
	</div>

	{{#if flashMessages.queue}}
		<aside class="FlashMessages">
			{{#each flashMessages.queue as |flash|}}
				{{flash-message flash=flash}}
			{{/each}}
		</aside>
	{{/if}}

	{{x-aside class="Aside--left"
		isAuthenticated=session.isAuthenticated
		userChannel=userChannel}}

	{{#if session.isAuthenticated}}
		{{#link-to 'channel.add' userChannel class="Btn Btn--primary AddTrackButton" title="Add a new track to your radio"}}Add track{{/link-to}}
	{{/if}}

	<main class="SiteMain">
		{{#if-ios}}
			<div class="Note Note--full">
				<p>We're sorry but because your iOS device doesn't support autoplay, Radio4000 can't work properly.</p>
			</div>
		{{/if-ios}}

		{{outlet}}
	</main>

 	<div class="Aside Aside--right">
		{{#x-playback radioDevice=emberYoutube}}
				{{ember-youtube class="Player"
					ytid=player.model.ytid
					delegate=this
					delegate-as="emberYoutube"
					autoplay="true"
					playing="ytPlaying"
					paused="ytPaused"
					ended="ytEnded"
					error="ytError"
					showProgress="true"}}
		{{/x-playback}}
	</div>
{{/app-root}}
