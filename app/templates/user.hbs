<section class="Dashboard">

	<section class="Section">
		<h2>Your channel</h2>
		{{#each playlist in auth.user.playlists}}
			{{#link-to "playlist" playlist class="Box"}}
				<h3>{{playlist.title}}</h3>
				<p>{{playlist.description}}</p>
			{{/link-to}}
		{{/each}}

		{{#unless auth.user.playlists}}
			{{#link-to "new" class="Box"}}
				<h3>Get your own channel</h3>
			{{/link-to}}
		{{/unless}}
	</section>

	<section class="Section">
		<h2>Your favorites</h2>
		{{#if auth.user.favoritePlaylists}}
			<p class="is-inactiveText">Quick access to channels you saved as favorite.</p>
			<div class="Playlists">
				{{#each playlist in auth.user.favoritePlaylists}}
					<div class="Playlist">{{#link-to "playlist" playlist}}{{playlist.title}}{{/link-to}}</div>
				{{/each}}
			</div>
		{{else}}
			<p class="is-inactiveText">You haven't saved any favorites yet.</p>
		{{/if}}
	</section>

</section>
