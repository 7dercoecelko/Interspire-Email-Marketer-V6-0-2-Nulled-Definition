{{#if model.tracks}}
	{{tracks-list content=model.tracks
					canEdit=canEdit
					playback=playback}}
{{else}}
	{{!-- only show once real model is loaded  --}}
	{{#if model.title}}
	<div class="Container Section Section--messaging">
		<p>This channel doesn't have any tracks, yet.</p>
	</div>
	{{/if}}
{{/if}}

<div class="Container">
	{{#if showHelp}}
		<div class="Note">
			{{#if noTracks}}
				<h2>Welcome to your new channel!</h2>
				<p>To add a new track, tap <em>'Add track'</em> above.</p>
			{{/if}}

			{{#if oneTrack}}
				<p><strong>Your first track!</strong> Why don't you add another?</p>
			{{/if}}

			{{#unless hasImage}}
				<p>To add an image, update the description of your channel, tap <em>'Edit channel'</em> above.</p>
			{{/unless}}
		</div>
	{{/if}}
</div>

{{outlet}}
