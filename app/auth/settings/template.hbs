<div class="Sections">
	<section class="Section">
		<header class="Manchet">
			<h1>Settings</h1>
			<p>Customize Radio4000 to your needs.</p>
			<p>Here you can add and remove accounts which you can use to sign in.</p>
		</header>
		<div class="Container">

			{{#if currentUser.email}}
				<div class="ProviderAccounts">
					<h3>Your Email</h3>
					{{input value=currentUser.email}}
					<span>{{currentUser.emailVerified}}</span>
					<button class="Btn" {{action 'removeEmail'}}>Remove email</button>
					<button class="Btn" {{action 'updateEmail' currentUser.email}}>Update email</button>
				</div>
			{{/if}}

			<h3>Linked accounts</h3>

			{{account-provider-list
				providerData=providerData
				emailVerified=emailVerified
				unlink=(action "unlinkAccount")
				resetPassword=(action "resetPassword")
				verifyEmail=(action "verifyEmail")}}

			<h3>Unlinked accounts</h3>

			{{#if 'hasEverything'}}
				<p class="Muted">There are no other accounts to connect.</p>
			{{/if}}
			<div class="ProviderAccounts">
				{{#unless hasGoogle}}
					{{account-provider-link
						name="Google"
						providerId="google.com"
						disabled=hasGoogle
						link=(action "linkAccount")}}
				{{/unless}}
				{{#unless hasFacebook}}
					{{account-provider-link
						name="Facebook"
						providerId="facebook.com"
						disabled=hasFacebook
						link=(action "linkAccount")}}
				{{/unless}}
				{{#unless hasEmail}}
					{{account-email-link name="Email" link=(action "linkEmail")}}
				{{/unless}}
			</div>
		</div>
	</section>
</div>
{{outlet}}
