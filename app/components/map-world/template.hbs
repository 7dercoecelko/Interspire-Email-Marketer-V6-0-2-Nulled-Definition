{{#leaflet-map
	maxBounds=maxBounds
	lat=lat
	lng=lng
	zoom=zoom
	minZoom=minZoom
	onMoveend=(action "updateCenter")
}}

	{{!-- {{tile-layer url="http://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}.png"}} --}}
	{{tile-layer url="https://{s}.tile.opentopomap.org/{z}/{x}/{y}.png"}}		

	{{#each items as |item|}}
		{{#if item.coordinates}}
			{{#marker-layer location=item.coordinates}}
				{{#popup-layer}}
					{{yield item}}
				{{/popup-layer}}
			{{/marker-layer}}
		{{/if}}
	{{/each}}

{{/leaflet-map}}
