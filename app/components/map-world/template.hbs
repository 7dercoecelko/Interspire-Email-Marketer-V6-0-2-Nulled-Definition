{{#leaflet-map
		 maxBounds=maxBounds
		 lat=lat
		 lng=lng
		 zoom=zoom
		 minZoom=minZoom
		 attributionControl=false
		 onLoad=(action "initMap")
		 onMoveend=(action "updateCenter")
}}
	{{tile-layer url="https://{s}.tile.opentopomap.org/{z}/{x}/{y}.png"}}

	{{#each items as |item|}}
		{{#marker-layer
				 icon=(if item.isFavorite iconFavorite iconDefault)
				 location=item.coordinates}}
			{{#popup-layer}}
				{{yield item}}
			{{/popup-layer}}
		{{/marker-layer}}
	{{/each}}

{{/leaflet-map}}
