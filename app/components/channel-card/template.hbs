{{#link-to 'channel' channel}}
	{{channel-cover image=channel.coverImage}}
{{/link-to}}

<h3 class="ChannelCard-title">
	{{#link-to 'channel.dashboard' channel}}
		{{channel.title}}
	{{/link-to}}
</h3>

<p class="ChannelCard-body">
	{{do-truncate channel.body 300}}
</p>

{{#if channel.tracks}}
	<div class="ChannelCard-playback BtnGroup">
		{{#playback/play-button track=channel.tracks.lastObject}}
			{{x-icon i='play'}} Play
		{{/playback/play-button}}
	</div>
	<div class="ChannelCard-overlayBtn">
		{{#playback/play-button class="Btn Btn--text" track=channel.tracks.firstObject shuffle=true}}
			{{x-icon i='shuffle'}}
		{{/playback/play-button}}
	</div>
{{/if}}
