<aside class="PanelNav">
	<div class="PanelNav-overlay"></div>

	<div class="PanelNav-inner">
		{{#if authed}}
			{{#if userChannel}}
				<div class="PanelNav-group">
					<div class="UserChannel">
						{{#link-to 'channel' userChannel title="Go to my radio"}}

							<img class= "UserChannel-media" src="{{userChannel.coverImage.thumb}}">

							<div class="UserChannel-body">
								<p class="UserChannel-intro Muted">Your radio</p>
								<p class="UserChannel-title">{{userChannel.title}}</p>
							</div>
						{{/link-to}}
					</div>
				</div>
			{{/if}}
		{{/if}}

		<div class="PanelNav-group">
			{{#link-to 'intro' title="Get introduced to Radio4000"}}Introduction{{/link-to}}
			{{#link-to 'about' title="Learn more about Radio4000"}}About{{/link-to}}
			{{#link-to 'help' title="Answers to your questions"}}Help{{/link-to}}
			<a href="http://blog.radio4000.com" target="_blank" title="How is the weather at Radio4000?">&rarr; Blog</a>
		</div>

		{{!-- {{#if authed}}
			<div class="PanelNav-group">
				<form class="CheckboxRemote">
					<label title="Your radio will automatically play the tracks you play on another device.">{{input type="checkbox" checked=session.currentUser.settings.isRemoteActive}}Remote control</label>
				</form>
			</div>
		{{/if}} --}}

		<div class="PanelNav-group">
			{{#if authed}}
				{{#link-to 'logout' class="Muted" title="Log out from Radio4000"}}Log out{{/link-to}}
			{{else}}
				{{#link-to 'login' title="Register or log in to Radio4000"}}Register or log in{{/link-to}}
			{{/if}}
		</div>
	</div>
</aside>
