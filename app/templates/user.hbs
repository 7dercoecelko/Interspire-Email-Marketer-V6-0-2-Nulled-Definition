<div class="Manchet">
	<h1>Dashboard<small> â€” a complete overview of what you can do</small></h1>
</div>

<section class="Dashboard">

	<section class="Section">
			{{#each playlists}}
				{{#link-to "playlist" this class="Box"}}
					<h2>{{title}}</h2>
					<p>Your radio</p>
				{{/link-to}}
			{{/each}}

			{{#unless playlists}}
				{{#link-to "playlists.new" class="Box"}}
					<h2>Get your own playlist</h2>
				{{/link-to}}
			{{/unless}}
	</section>

	<section class="Section">
		<h2>Explore more channels</h2>
		{{#link-to 'playlists'}}
			<p>Browse channels</p>
		{{/link-to}}
	</section>

	<section class="Section">
		<h2>Your favorites</h2>
		{{#if favoritePlaylists}}
			<p class="is-inactiveText">Quick access to channels you starred as favorites</p>
			<div class="Playlists">
				{{#each favoritePlaylists}}
					<div class="Playlist">{{#link-to "playlist" this}}{{title}}{{/link-to}}</div>
				{{/each}}
			</div>
		{{else}}
			<p class="is-inactiveText">You haven't addded any favorites yet.</p>
		{{/if}}
	</section>

</section>
