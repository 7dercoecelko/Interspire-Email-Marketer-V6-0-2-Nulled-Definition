{{#if isShowingModal}}
  {{#modal-dialog alignment='center' translucentOverlay=true}}
    {{track-edit model=trackToEdit saveTrack="saveTrack" deleteTrack="deleteTrack" cancelEdit="closeModal"}}
  {{/modal-dialog}}
{{/if}}

{{#if model.length}}
	{{!-- {{#ember-list items=sortedModel height=800 rowHeight=40}} --}}
	{{!-- {{/ember-list}} --}}
	<ul class="List">
		{{#each sortedModel as |model|}}
			{{track-item track=model
				canEdit=controllers.channel.canEdit
				playback=controllers.playback
				edit="editTrack"}}
		{{/each}}
	</ul>
{{else}}
	<div class="Container Section--space">
		<p>No tracks yet.</p>
		{{#if canEdit}}
			<p>Why don't you {{#link-to 'channel.add'}}add one?{{/link-to}}</p>
		{{/if}}
	</div>
{{/if}}

