<div {{bind-attr class=":OverlayManager :BreadAndCheese isMaximized isPanelOpen:is-panelOpen"}}>
	<header class="SiteHeader">
		{{partial 'partials/nav-header'}}
	</header>

	<aside class="SitePanelNav">
		{{partial 'partials/nav-panel'}}
	</aside>

	<aside class="SitePanelNavOverlay"></aside>

	<main class="SiteMain">

		{{#if-ios}}
			<div class="Note Note--full">
				<p>We're sorry but because your iOS device doesn't support autoplay Radio4000 can't work properly.</p>
			</div>
		{{/if-ios}}

		{{outlet}}
	</main>

	{{render 'playback'}}
</div>
