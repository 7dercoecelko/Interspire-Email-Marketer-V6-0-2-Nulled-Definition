<div {{bind-attr class=':Playback model:is-active'}}>
	<div class="Container">

		<div {{bind-attr class=':Player isMaximized model.provider'}}>
			{{#if model}}
				<iframe id="player" type="text/html" width="210" height="166" frameborder="0" {{bind-attr src="embedUrl"}}></iframe>
			{{/if}}
		</div>

		<div class="Controls">
			{{#if model}}

				<div class="Controls-title">
					{{#link-to 'playlist' controllers.playlist}}
						{{#if model.title}}
							{{model.title}}
						{{else}}
							Untitled
						{{/if}}
					{{/link-to}}
				</div>

				<div class="Controls-buttons">

					<button title="Previous" class="Btn" {{action 'prev' model}}>{{x-icon name='previous'}}</button>
					{{#if isPlaying}}
						<button title="Pause" class="Btn" {{action 'pause'}}>{{x-icon name='pause'}}</button>
					{{else}}
						<button title="Play" class="Btn" {{action 'play'}}>{{x-icon name='play'}}</button>
					{{/if}}
					<button title="Next" class="Btn" {{action 'next' model}}>{{x-icon name='next'}}</button>

					<button class="Btn" {{action 'toggle'}} title="Toggle the video">
						{{#if isMaximized}}
							{{x-icon name='arrows-compress'}}
						{{else}}
							{{x-icon name='arrows-expand'}}
						{{/if}}
					</button>
				</div>

			{{else}}
				{{!-- no track is selected here --}}
				{{#link-to 'playlists'}}Playlists{{/link-to}}
				{{!-- <button class="Btn" {{action 'justPlay'}}>Playlists</button> --}}
			{{/if}}
		</div>
	</div>
</div>
