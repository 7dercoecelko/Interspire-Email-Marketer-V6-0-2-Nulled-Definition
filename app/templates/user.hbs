<div class="Box">
	{{#if playlists}}
		<h3>Your playlists</h3>
		<ul class="List">
			{{#each playlists}}
				<li>
					{{#link-to "playlist" this}}
						<span>{{title}}</span>
						{{!-- <span>id: {{id}}</span> --}}
					{{/link-to}}
				</li>
			{{/each}}
		</ul>
	{{/if}}
</div>

<div class="Box">
	{{#if favoritePlaylists}}
		<h3>Your favorites</h3>
		<ul class="List">
			{{#each favoritePlaylists}}
				<li>
					{{#link-to "playlist" this}}
						<span>{{title}}</span>
					{{/link-to}}
				</li>
			{{/each}}
		</ul>
	{{else}}
		<p class="is-inactiveText">Your favorite playlists will be shown here.</p>
	{{/if}}
</div>
