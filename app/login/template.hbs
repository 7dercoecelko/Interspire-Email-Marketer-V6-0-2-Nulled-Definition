<div class="Sections">
	<section class="Section">
		<div class="Container">
			{{#if session.isAuthenticated}}
				<p>You are already logged in.</p>
				<p>{{link-to "Log out" "logout"}}</p>
				{{#if session.currentUser.channels.firstObject}}
					<p>Did you want to go to your radio?</p>
					<p>
						{{#link-to "channel" session.currentUser.channels.firstObject.slug}}
							Go to {{session.currentUser.channels.firstObject.title}}.
						{{/link-to}}
					</p>
				{{/if}}
			{{else}}
				<h1>Login</h1>
				<p>To <strong>create</strong> or <strong>manage</strong> your Radio4000, connect with:</p>
				<p>
					<button class="Btn Btn--large" title="Sign in or register with Google" {{action 'login' 'google'}}>
						Google</button>
						<span style="margin: 0 0.5rem;">or</span>
					<button class="Btn Btn--large" title="Sign in or register with Facebook" {{action 'login' 'facebook'}}>
						Facebook</button>
				</p>
				{{#if session.isWorking}}
					{{#is-loading}}Warming transistorsâ€¦{{/is-loading}}
				{{/if}}

				<p>&rarr; <a href="{{href-to 'intro'}}">Get introduced to Radio4000</a></p>
			{{/if}}
		</div>
	</section>
</div>
