<div class="Sections">
	<section class="Section">
		<header class="Manchet">
			<h1>Settings</h1>
			<p>Customize your tool to your needs for a personal experience.</p>
		</header>
		<div class="Container">
			<h2>Accounts</h2>
			<p>You can link and unlink your different accounts together, to login using any of them.</p>
			{{#if hasGoogle}}
				<p>has googlito!</p>
			{{else}}
				{{#account-provider-link providerName="google" link=(action 'linkAccount')}}Google{{/account-provider-link}}
			{{/if}}
			{{#if hasFacebook}}
				<p>has facebooki@@(@(@#@!!!!!!!!</p>
			{{else}}
				{{#account-provider-link providerName="facebook" link=(action 'linkAccount')}}Facebook{{/account-provider-link}}
			{{/if}}

		</div>
	</section>
</div>
{{outlet}}
