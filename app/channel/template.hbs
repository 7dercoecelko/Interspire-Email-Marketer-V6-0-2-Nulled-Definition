<div class="Sections">
	<section class="Section">
		<div class="Manchet">

			<nav class="Tabs Tabs--horizontal">
				{{#link-to 'channel.index' class="Tabs-item" title="All tracks"}}
					<span>{{model.title}}</span>
					<!-- Infos -->
				{{/link-to}}
				{{#link-to 'channel.tracks' class="Tabs-item" title="All tracks"}}
					Tracks <span class="Muted">({{model.totalTracks}})</span>
				{{/link-to}}
				{{#link-to 'channel.favorites' class="Tabs-item" title="Favorites of this radio"}}
					Favorites
				{{/link-to}}
				{{#if canEdit}}
					{{#link-to 'channel.followers' class="Tabs-item" title="Followers of this radio"}}
						Followers
					{{/link-to}}
					{{#link-to 'channel.edit' class="Tabs-item" title="Edit your radio"}}
						Edit
					{{/link-to}}
				{{/if}}
			</nav>
		</div>

		<div class="Container">
			<article class="Channel Channel--detail {{if canEdit 'canEdit'}}">
				{{outlet}}
			</article>

			{{#if canEdit}}{{#unless isWelcomed}}
				<div class="Channel-introduction">
					{{page-welcome channel=model}}
				</div>
			{{/unless}}{{/if}}

		</div>
	</section>
</div>
