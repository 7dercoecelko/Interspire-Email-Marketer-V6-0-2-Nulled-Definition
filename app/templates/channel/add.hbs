<div class="Channel-add">
	<div class="Section Container">
		<form class="Form AddTrack" {{action "addTrack" on='submit'}}>
			<h3>Add track</h3>

			{{#if formError}}
				<p class="Warning">{{formError}}</p>
			{{/if}}

			{{input-url type="url" value=trackUrl placeholder="Paste in a link to a YouTube video" pasted="autoTitle" required="required"}}
			{{input value=trackTitle placeholder="Title"}}<br>
			{{input value=trackBody placeholder="Optional description"}}<br>

			<button class="Btn Btn--primary" type='submit' title="add track to your channel">Add track</button>
			{{#link-to "channel" channel}}
				<button class="Btn Btn--text" title="cancel adding track" >Cancel editing</button>
			{{/link-to}}
		</form>
	</div>
</div>
