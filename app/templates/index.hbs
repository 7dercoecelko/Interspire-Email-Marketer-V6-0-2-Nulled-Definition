<article class="Section Home">
	{{!-- <h1>Radio4000</h1> --}}
	<p class="Manchet">Create your own <span class="is-highlighted">radio</span>, share your music taste and listen to your friend's</p>
</article>

{{#if auth.authed}}
	{{#unless auth.user.playlists}}
		<section class="Section">
			<h2>Create your playlist</h2>
			<p>{{#link-to "playlists.new"}}<button class="Btn">Get your own playlist</button>{{/link-to}}</p>
		</section>
	{{/unless}}
{{/if}}

{{#unless auth.authed}}
	<section class="Section Section--teaser">
	<a href="#" {{action 'showLogin'}}>
			<div class="Section-inner">
				<h2 class="Title">Get your own playlist</h2>
				{{#if showLogin}}
					<p>Please choose how to log in.</p>
					<p>
						<button class="Btn Btn--primary" {{ action 'login' 'google' this}}>With Google</button>
						<button class="Btn Btn--primary" {{ action 'login' 'facebook' this}}>With Facebook</button>
					</p>
				{{else}}
					<p>Get started or log in</p>
				{{/if}}
			</div>
		</a>
	</section>
{{/unless}}

{{#if auth.authed}}
	<section class="Section">
		{{render 'user' auth.user}}
	</section>
{{/if}}

<section class="Section Section--teaser">
	{{#link-to 'playlists'}}
		<div class="Section-inner">
			<h2 class="Title">Start listening</h2>
			<p>See all playlists</p>
		</div>
	{{/link-to}}
</section>


{{partial 'navigation'}}
