</div> --}}

{{#if isShowingModal}}
  {{#modal-dialog close="closeModals"}}
    {{track-edit model=trackToEdit saveTrack="saveTrack" deleteTrack="deleteTrack" cancelEdit="closeModals"}}
  {{/modal-dialog}}
{{/if}}

{{#if sortedModel}}
	<ul class="List">
		{{#each sortedModel as |model|}}
			{{track-item track=model canEdit=controllers.channel.canEdit edit="editTrack"}}
		{{/each}}
	</ul>
{{else}}
	<div class="Container Section--space">
		<p>No tracks yet.</p>
		{{#if canEdit}}
			<p>Why don't you {{#link-to 'channel.add'}}add one?{{/link-to}}</p>
		{{/if}}
	</div>
{{/if}}

