<div class="Section">
	<div class="Container Flex">
		{{input type="text" value=search placeholder="Search channels"}}
		<div class="BtnGroup">
			<h4 class="BtnGroup-label">Sort by</h4>
			<button class="Btn" {{action 'sortBy' 'created'}}>Date</button>
			<button class="Btn" {{action 'sortBy' 'title'}}>Title</button>
		</div>
	</div>
	<div class="Container Container--noPadding">
		<ul class="List">
			{{#each channel in channels}}
				<li>
					{{#link-to "channel" channel class="ChannelTeaser"}}
						<h3 class="ChannelTeaser-title">
							{{unbound channel.title}}
							<small class="u-alignRight">{{unbound channel.tracks.length}}</small>
						</h3>
						<p class="ChannelTeaser-description">{{do-truncate channel.body 140}}</p>
					{{/link-to}}
				</li>
			{{/each}}
		</ul>
	</div>
</div>
