{{#if model.length}}
	{{#ember-list items=sortedModel height=550 rowHeight=40}}
		{{track-item track=content canEdit=controllers.channel.canEdit playback=controllers.playback}}
	{{/ember-list}}
{{else}}
	<div class="Container Section--space">
		<p>No tracks yet.</p>
		{{#if canEdit}}
			<p>Why don't you {{#link-to 'channel.add'}}add one?{{/link-to}}</p>
		{{/if}}
	</div>
{{/if}}

