{{#async-button
		 reset=true
		 action=(action 'click') as |component state|}}
  {{#if state.isDefault}}
		{{#if isFavorite}}
			★
		{{else}}
			☆
		{{/if}}

		<span> Favorite</span>
  {{/if}}
  {{#if state.isPending}}
    Loading
  {{/if}}
  {{#if state.isFulfilled}}
    Success
  {{/if}}
  {{#if state.isRejected}}
    Error
  {{/if}}
{{/async-button}}
