<div {{bind-attr class=':BreadAndCheese isMaximized'}}>
	<header class="SiteHeader">
		<div class="Bar">
			<h1 class="SiteLogo">
				{{#link-to "index" title="Back to home"}}
					<img src="images/logos/logo-radio4000.png" alt="Radio 4000">
				{{/link-to}}
			</h1>

			{{partial 'partials/nav-header'}}
		</div>
	</header>

	<main class="SiteMain">
		{{liquid-outlet name="main"}}
	</main>

	<aside class="SiteAside">
		{{render 'playback'}}
	</aside>

	<footer class="SiteFooter">
		<div class="Container">
			{{partial 'partials/nav-footer'}}
		</div>
	</footer>
</div>
